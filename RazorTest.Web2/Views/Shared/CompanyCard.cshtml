@model Company

<div class="card">
    <h1>@Model.Name</h1>
    @Model.Address
</div>

<div>
    <form method="post" asp-controller="Home">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" />
        </div>
        <button type="submit">Submit</button>
    </form>
</div>